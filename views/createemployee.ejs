<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
  $(document).ready(function() {
    $("button").click(function(event) {
      event.preventDefault(); // prevent form from submitting

      let hasError = false;

      // Check name input
      if ($("#nameInput").val().length > 250) {
        $("#nameError").text("Name must not exceed 250 characters.");
        hasError = true;
      } else {
        $("#nameError").text("");
      }
      
      // Check address input
      if ($("#addressInput").val().length > 250) {
        $("#addressError").text("Address must not exceed 250 characters.");
        hasError = true;
      } else {
        $("#addressError").text("");
      }

      // Check salary input
      if ($("#salaryInput").val().length > 250) {
        $("#salaryError").text("Salary must not exceed 250 characters.");
        hasError = true;
      } else {
        $("#salaryError").text("");
      }

      // Check role input
      if ($("#roleInput").val().length > 250) {
        $("#roleError").text("Role must not exceed 250 characters.");
        hasError = true;
      } else {
        $("#roleError").text("");
      }

      // Check employee number input
      if ($("#employeeNumberInput").val().length > 250) {
        $("#employeeNumberError").text("Employee number must not exceed 250 characters.");
        hasError = true;
      } else {
        $("#employeeNumberError").text("");
      }

      if (!hasError) {
        $("form").submit(); // submit form if no errors
      }
    });
  });
</script>
